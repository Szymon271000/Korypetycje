@model List<Lekcja14._02.Data.Item>

<a asp-action="Create">Add new item</a>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Category</td>
            <td>@item.Price</td>
            <td><a asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id">remove</a>
            <a asp-controller="Item" asp-action="Update" asp-route-id="@item.Id">edit</a></td>
        </tr>
    }
</table>